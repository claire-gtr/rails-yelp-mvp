<h1>Restaurants</h1>

<%= link_to "New restaurant", new_restaurant_path %>

<% @restaurants.each do |restau| %>
  <%= link_to restaurant_path(restau) do %>
    <h2><%= restau.name %></h2>
    <p><%= restau.category %></p>
    <p><%= link_to "Add review", new_restaurant_review_path(restau) %></p>
  <% end %>
  <hr>
<% end %>
