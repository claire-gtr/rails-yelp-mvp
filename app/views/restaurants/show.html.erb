<h1><%= @restaurant.name %></h1>

<h2><%= @restaurant.category %></h2>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p>Reviews from clients</p>
<ul>
  <%@restaurant.reviews.each do |review| %>
  <li><p> <%= review.content %></p>
    <p> <%= review.rating %></p></li>
  <%end %>
</ul>

<%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %>

<%= link_to "delete", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure?"} %>

<%= link_to "Home", restaurants_path %>
